<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.fede.appeuropaquiz.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/facil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:textSize="30sp"
        android:background="@drawable/cell_shape_facil"
        android:onClick="nivelQuiz"
        />

    <TextView
        android:id="@+id/medio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:textSize="30sp"
        android:background="@drawable/cell_shape_medio"
        android:onClick="nivelQuiz"/>

    <TextView
        android:id="@+id/dificil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dificil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:textSize="30sp"
        android:background="@drawable/cell_shape_dificil"
        android:onClick="nivelQuiz"/>
</LinearLayout>
